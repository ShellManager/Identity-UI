<script>
  $(function(){
      $.ajax({
          type: 'GET',
          url: 'https://<%= ENV['IDENTITY_API_URL'] %>/api/v1/applications/<%= params[:client_id].present? ? params[:client_id] : "nil" %>',
          success: function(data){
              $("#promptbox").append(data.html);

              if (data.saml) {
                  $(document).on('click', '#denySSO', function(e) {
                      e.preventDefault();
                      window.location = "/";
                  });

                  $(document).on('click', '#allowSSO', function(e) {
                      $("#promptbox").html("<span style='color: yellow'>Hold on, this won't take long...</span>");
                      $(function(){
                          redirect_uri = "https://<%= ENV['IDENTITY_API_URL'] %>/api/v1/saml/<%= params[:caller] %>?gid=<%= @current_user[:user_global_id] %>&api_key=<%= @current_user[:api_key] %>&client_id=<%= params[:client_id] %>"
                          setTimeout(function(){
                              window.location = redirect_uri
                          }, 2500)
                      })
                  })
              } else {
                  $(document).on('click', '#denySSO', function(e) {
                      e.preventDefault();
                      window.location = data.redirect_uri+"?error=access_denied&error_description=Permission+Error&error_reason=user_denied";
                  });

                  $(document).on('click', '#allowSSO', function(e) {
                      e.preventDefault();
                      e.stopImmediatePropagation();
                      e.stopPropagation();

                      form = new FormData();
                      form.append('client_id', "<%= params[:client_id] %>");
                      form.append('redirect_uri', data.redirect_uri);
                      form.append('access_key', "<%= @current_user[:api_key] %>");
                      form.append('response_type', "code");

                      $.ajax({
                          type: 'POST',
                          url: 'https://<%= ENV['IDENTITY_API_URL'] %>/api/v1/oauth/authorize',
                          data: form,
                          cache: false,
                          contentType: false,
                          processData: false,
                          success: function(data){
                              window.location = data.redirect_uri+"?code="+data["redirect_uri"]["code"];
                          }
                      })
                  });
              }
          }
      })
  })
</script>